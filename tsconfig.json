{
    "compilerOptions": {
      "target": "ES2020",
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "module": "ESNext",
      "skipLibCheck": true,
      "jsx": "react-jsx",
      "moduleResolution": "Node",
      "esModuleInterop": true,

      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,

      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitAny": true,
    },
    "include": ["./src"],
}